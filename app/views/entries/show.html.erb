<div class="column mt-6 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-link">
      <p class="panel-heading">
        <%= @entry.meal_type%>
      </p>

      <div class="panel-block">
        Calories: <%= @entry.calories%>
      </div>

      <div class="panel-block">
        Protien: <%= @entry.protiens%>
      </div>

      <div class="panel-block">
        Carbohydrates: <%= @entry.carbohydrates%>
      </div>

      <div class="panel-block">
        Fat: <%= @entry.fats%>
      </div>

      <div class="panel-block">
        Vitamin: <%= @entry.vitamins%>
      </div>
    </nav>
      
    <div class="column is-mobile">
      <div class="column">
       <%= link_to "Edit", edit_entry_path(@entry), class: "button is-gray" %>
       <%= link_to "Delete", entry_path(@entry), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "button is-gray" %>
      </div>

      <div class="column">
        <%#  %>
        </div>
    </div>
  </div>
</div>
